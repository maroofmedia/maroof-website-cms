    <script>
        // Infinite Marquee Logic
        document.querySelectorAll('.marquee-container').forEach(container => {
            const content = container.querySelector('.marquee-content');
            const clone = content.cloneNode(true);
            container.appendChild(clone);

            // Add spacing between loops
            const spacer = document.createElement('span');
            spacer.style.width = '0rem'; // Adjust spacing as needed
            spacer.style.display = 'inline-block';
            content.appendChild(spacer.cloneNode());
            clone.appendChild(spacer.cloneNode());

            // Adjust animation speed based on screen size
            const duration = window.innerWidth <= 768 ? '10s' : '12s';
            content.style.animation = `marquee ${duration} linear infinite`;
            clone.style.animation = `marquee ${duration} linear infinite`;
        });
    </script>
    